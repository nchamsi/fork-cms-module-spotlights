{% extends '/Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  {% if showSpotlightsAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(geturl('add'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}

{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrids %}
        {% for dataGrid in dataGrids %}
          <div id="dataGrid-{{ dataGrid.id }}" class="content-block content-block-pb jsDataGridSpotlightsHolder">
            <div class="content-title">
              <p>{{ dataGrid.title }}</p>
            </div>
            {% if dataGrid.content %}
              <div class="table-responsive">
                {{ dataGrid.content | raw }}
              </div>
            {% endif %}
            {% if not dataGrid.content %}
              <div class="table-responsive">
                {{ emptyDatagrid | raw }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
      {% if not dataGrids %}
        <p>{{ 'msg.NoItems'|trans }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}
